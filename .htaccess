<IfModule mod_rewrite.c>
    RewriteEngine On    
    RewriteCond %{HTTPS} off
    RewriteRule .* https://%{HTTP_HOST}%{REQUEST_URI} [NE,L,R=301]
    RewriteRule ^(craft)($|/) - [L]    
    RewriteRule ^$ public/ [L]
    RewriteRule ^map$ public/map/index.php [L]
    RewriteRule (.*) public/$1 [L]
</IfModule>